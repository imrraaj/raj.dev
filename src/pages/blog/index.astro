---
import PageLayout from "../../layout/PageLayout.astro";
const posts = await Astro.glob("./*md");
---

<PageLayout title="Blogs">
    <h1 class="text-4xl font-black text-primary my-6">What I have written</h1>
    <div class="post-container">
        {
            posts.map((post) => (
                <div class="my-6">
                    <a href={post.url}>
                        <p class="text-2xl font-extrabold font-heading text-primary hover:underline">
                            {post.frontmatter.title}
                        </p>
                    </a>
                    <span class="bg-secondary text-background px-3 rounded-sm font-bold text-sm">
                        {post.frontmatter.pubDate}
                    </span>
                    <p class="my-2">{post.frontmatter.description}</p>
                </div>
            ))
        }
    </div>
</PageLayout>
