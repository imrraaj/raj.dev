---
import { RssIcon } from "lucide-react";
---

<hr class="border-bg-border my-8" />
<footer class="py-6 text-sm flex justify-between items-center flex-wrap gap-4">
  <div class="flex flex-col items-start">
    <p class="text-xs text-text-muted font-medium font-primary italic space-y-1">
      <span class="block">Do not go gentle into that good night,</span>
      <span class="block">Rage, rage against the dying of the light</span>
    </p>
  </div>
  <a
    href={new URL("rss.xml", Astro.site || "https://rajpa.tel")}
    class="inline-flex gap-2 text-sm justify-center items-center text-text-muted hover:text-primary-500 hover:bg-bg-secondary px-3 py-2 rounded-lg transition-all duration-200"
    aria-label="Subscribe to RSS feed"
  >
    <RssIcon width={18} height={18} />
    <span>RSS Feed</span>
  </a>
</footer>
