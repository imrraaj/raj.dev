---
import PageLayout from "./PageLayout.astro";
const { frontmatter } = Astro.props;
---

<PageLayout title={frontmatter.title} descripton={frontmatter.description}>
    <article>
        <header class="my-4">
            <h1 class="text-3xl font-black leading-relaxed">
                {frontmatter.title}
            </h1>
        </header>
        <div
            class="prose text-justify prose-img:rounded-xl prose-img:mx-auto prose-headings:underline prose-a:text-violet-500 prose-strong:font-black space-y-8"
        >
            <slot />
        </div>
    </article>
    <a href="/blog" class="text-primary hover:underline my-4 block">
        ‚Üê Back to home
    </a>
</PageLayout>
